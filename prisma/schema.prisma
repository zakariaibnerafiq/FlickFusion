generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String
  password String

  aboutMe    String?
  profilePic String?
  isAdmin    Boolean @default(false)

  watchList    String[] @db.ObjectId
  favoriteList String[] @db.ObjectId

  watchListMovies    Movie[] @relation("UserWatchlist", fields: [watchList], references: [id])
  favoriteListMovies Movie[] @relation("UserFavoriteList", fields: [favoriteList], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  releaseDate DateTime
  genre       String
  rating      Float?
  image       String?

  inWatchlistOf    User[]   @relation("UserWatchlist", fields: [inWatchlistOfIds], references: [id])
  inWatchlistOfIds String[] @db.ObjectId

  inFavoriteListOf    User[]   @relation("UserFavoriteList", fields: [inFavoriteListOfIds], references: [id])
  inFavoriteListOfIds String[] @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
